<?xml version="1.0" encoding="utf-8"?>
<odoo>
           
   <template id="portal_my_aus" name="My AUS">
        <t t-call="portal.portal_layout">
        <h3>AU's
            <t t-call="portal.portal_searchbar"/>
        </h3>
        <t t-if="not aus">
            <p>There are currently no au for your account.</p>
        </t>
        <div t-if="aus" class="panel panel-default">
            <div class="table-responsive"><table class="table table-hover o_portal_my_doc_table">
                <thead>
                  <tr class="active">
                      <th>au #</th>
                      <th>Localización</th>
                      <th>Tipo de autorización</th>
                      <th></th>
                    </tr>
                </thead>
                <t t-foreach="aus" t-as="au">
                    <tr>
                        <td>
                            <a t-attf-href="/my/aus/#{au.id}?#{keep_query()}"><t t-esc="au.x_name"/></a>
                        </td>
                        <td><span t-field="au.x_localizacion_id.name"/></td>
                        <td>
                          <t>
                            <span class="label label-default" t-field="au.x_tipo"/>
                          </t>
                        </td>
                    </tr>
                </t>
            </table></div>
            <div t-if="pager" class="o_portal_pager text-center">
              <t t-call="portal.pager"/>
            </div>
        </div>
      </t>
    </template>
    
        <template id="portal_au_page" name="au Portal Template">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    <t t-call='portal.record_pager'/>
                                    
                                    <span t-field="au.x_name"/>
                                </h4>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 hidden-print" id="o_portal_account_actions">
                                <a target="_blank" t-att-href="'/my/aus/pdf/%s?%s' % (au.id, keep_query())" class="pull-right" title="Download">
                                    <i class="fa fa-download fa-2x" aria-hidden="true"/>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <t t-if="error or warning" t-call="portal_aus.portal_au_error"/>
                        <t t-if="success and (not error and not warning)" t-call="portal_aus.portal_au_success"/>
                        <t t-call="portal_green_crm.portal_au_report"/>
                    </div>
                </div>
            </div>
            <div class="oe_structure mb32"/>
        </t>
    </template>
    
    <template id="portal_au_report" name="au Portal Report">
        <div class="row">
             <div class="col-xs-10" name="Documento">
                <strong>Documento :<span t-field="au.x_name"/> </strong>
            </div>
            <div class="row mt32 mb32">
            <div class="col-xs-5" t-if="au.x_localizacion_id.name">
                <strong>Localización:</strong>
                <p t-field="au.x_localizacion_id.name"/>
            </div>
            <div class="col-xs-5" t-if="au.x_tipo">
                <strong>Tipo Autorización:</strong>
                <p t-field="au.x_tipo"/>
            </div>
            <div class="col-xs-5" t-if="au.x_tipo_mapama_id.x_name">
                <strong>Tipo MAPAMA:</strong>
                <p t-field="au.x_tipo_mapama_id.x_name"/>
            </div>
            <div class="col-xs-5" t-if="au.x_codigo_mapama_id">
                <strong>Código MAPAMA:</strong>
                <p t-field="au.x_codigo_mapama_id"/>
            </div>
            </div>
        </div>
    </template>
    
    <template id="portal_au_error" name="au error/warning display">
        <div class="row mr16">
            <div t-attf-class="'col-md-12 mr16 ml16 alert alert-dismissable' #{'alert-danger' if error else 'alert-warning'}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                <t t-if="error == 'generic'" name="generic">
                    There was an error processing this page.
                </t>
            </div>
        </div>
    </template>

    <template id="portal_au_success" name="au success display">
        <div class="row mr16">
            <div class="col-md-12 mr16 ml16 alert alert-dismissable alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            </div>
        </div>
    </template>

</odoo>