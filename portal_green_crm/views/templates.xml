<?xml version="1.0" encoding="utf-8"?>
<odoo>
       
    <template id="portal_my_dis_home" name="Portal My Home : dis entries" inherit_id="portal.portal_my_home" priority="999">
        <xpath expr="//ul[hasclass('o_portal_docs')]" position="inside">
            <li t-if="di_count" class="list-group-item">
                <span class="badge" t-esc="di_count"/>
                <a href="/my/dis">Mis Dis</a>
            </li>
            <li t-if="ct_count" class="list-group-item">
                <span class="badge" t-esc="ct_count"/>
                <a href="/my/cts">Mis Contratos de tratamiento</a>
            </li>
            <li t-if="nt_count" class="list-group-item">
                <span class="badge" t-esc="nt_count"/>
                <a href="/my/nts">Mis Notificaciones de traslado</a>
            </li>
            <li t-if="autorizaciones_count" class="list-group-item">
                <span class="badge" t-esc="autorizaciones_count"/>
                <a href="/my/autorizaciones">Mis Autorizaciones</a>
            </li>
        </xpath>
    </template>
    
   <template id="portal_my_dis" name="My DIS">
        <t t-call="portal.portal_layout">
        <h3>DI's
            <t t-call="portal.portal_searchbar"/>
        </h3>
        <t t-if="not dis">
            <p>There are currently no Di for your account.</p>
        </t>
        <div t-if="dis" class="panel panel-default">
            <div class="table-responsive"><table class="table table-hover o_portal_my_doc_table">
                <thead>
                  <tr class="active">
                      <th>DI #</th>
                      <th>Operador</th>
                      <th>Estado</th>
                      <th></th>
                    </tr>
                </thead>
                <t t-foreach="dis" t-as="di">
                    <tr>
                        <td>
                            <a t-attf-href="/my/dis/#{di.id}?#{keep_query()}"><t t-esc="di.x_name"/></a>
                        </td>
                        <td><span t-field="di.x_operador_traslado_id"/></td>
                        <td>
                          <t t-if="di.x_estado == 'pendiente'">
                            <span class="label label-default"><i class="fa fa-fw fa-remove"/> Pendiente</span>
                          </t>
                        </td>
                    </tr>
                </t>
            </table></div>
            <div t-if="pager" class="o_portal_pager text-center">
              <t t-call="portal.pager"/>
            </div>
        </div>
      </t>
    </template>
    
        <template id="portal_di_page" name="Di Portal Template">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    <t t-call='portal.record_pager'/>
                                    
                                    <span t-field="di.x_name"/>
                                </h4>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 hidden-print" id="o_portal_account_actions">
                                <a target="_blank" t-att-href="'/my/dis/pdf/%s?%s' % (di.id, keep_query())" class="pull-right" title="Download">
                                    <i class="fa fa-download fa-2x" aria-hidden="true"/>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <t t-if="error or warning" t-call="portal_dis.portal_di_error"/>
                        <t t-if="success and (not error and not warning)" t-call="portal_dis.portal_di_success"/>
                        <t t-call="portal_green_crm.portal_di_report"/>
                    </div>
                </div>
            </div>
            <div class="oe_structure mb32"/>
        </t>
    </template>
    
    <template id="portal_di_report" name="Di Portal Report">
        <div class="row">
            <div class="col-xs-10" name="Documento">
                <strong>Documento :<span t-field="di.x_name"/> </strong>
            </div>
            <div class="row mt32 mb32">
            <div class="col-xs-5" t-if="di.x_operador_traslado_id">
                <strong>Operador:</strong>
                <p t-field="di.x_operador_traslado_id"/>
            </div>
            <div class="col-xs-5" t-if="di.x_productor_id">
                <strong>Origen:</strong>
                <p t-field="di.x_productor_id"/>
            </div>
            <div class="col-xs-5" t-if="di.x_gestor_id">
                <strong>Destino:</strong>
                <p t-field="di.x_gestor_id"/>
            </div>
            <div class="col-xs-5" t-if="di.x_ctratamiento_id">
                <strong>Contrato de tratamiento:</strong>
                <p t-field="di.x_ctratamiento_id"/>
            </div>
            </div>
        </div>
    </template>
    
    <template id="portal_di_error" name="di error/warning display">
        <div class="row mr16">
            <div t-attf-class="'col-md-12 mr16 ml16 alert alert-dismissable' #{'alert-danger' if error else 'alert-warning'}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                <t t-if="error == 'generic'" name="generic">
                    There was an error processing this page.
                </t>
            </div>
        </div>
    </template>

    <template id="portal_di_success" name="di success display">
        <div class="row mr16">
            <div class="col-md-12 mr16 ml16 alert alert-dismissable alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            </div>
        </div>
    </template>

</odoo>